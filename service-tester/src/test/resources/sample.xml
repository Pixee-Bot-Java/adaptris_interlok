<service-test>
    <unique-id>AdapterTest</unique-id>
    <!--test-client class="stub-test-client" /-->
    <test-client class="jmx-test-client">
        <jmx-url>service:jmx:jmxmp://localhost:5555</jmx-url>
    </test-client>
    <test-list>
        <unique-id>TestList</unique-id>
        <test>
            <unique-id>Test1</unique-id>
            <service-to-test>
                <source class="inline-source">
                    <xml>
                        <![CDATA[
                            <add-metadata-service>
                              <unique-id>Add1</unique-id>
                              <metadata-element>
                                <key>key1</key>
                                <value>val1</value>
                              </metadata-element>
                            </add-metadata-service>
                            <add-metadata-service>
                              <unique-id>Add2</unique-id>
                              <metadata-element>
                                <key>key2</key>
                                <value>val2</value>
                              </metadata-element>
                            </add-metadata-service>
                        ]]>
                    </xml>
                </source>
                <preprocessors>
                    <preprocessor class="wrap-in-sc-preprocessor" />
                </preprocessors>
            </service-to-test>
            <test-case>
                <unique-id>TestCase1</unique-id>
                <input-message class="inline-test-message">
                    <payload>
                        <![CDATA[<xml/>]]>
                    </payload>
                </input-message>
                <assertions>
                    <assert-metadata-equals>
                        <metadata>
                            <key-value-pair>
                                <key>key1</key>
                                <value>val1</value>
                            </key-value-pair>
                            <key-value-pair>
                                <key>key2</key>
                                <value>val2</value>
                            </key-value-pair>
                            <key-value-pair>
                                <key>adpnextmlemarkersequence</key>
                                <value>2</value>
                            </key-value-pair>
                        </metadata>
                    </assert-metadata-equals>
                    <assert-payload-contains>
                        <payload>xml</payload>
                    </assert-payload-contains>
                </assertions>
            </test-case>
        </test>
        <test>
            <unique-id>Test2-Xpath</unique-id>
            <service-to-test>
                <source class="file-source">
                    <file>file:///./src/test/resources/service.xml</file>
                </source>
                <preprocessors>
                    <preprocessor class="xpath-preprocessor">
                        <xpath>//add-metadata-service[./unique-id = 'Add1']</xpath>
                    </preprocessor>
                    <preprocessor class="variable-substitution-preprocessor">
                        <property-file>file:///./src/test/resources/test.properties</property-file>
                    </preprocessor>
                </preprocessors>
            </service-to-test>
            <test-case>
                <unique-id>TestCase1</unique-id>
                <input-message class="inline-test-message">
                    <payload>
                        <![CDATA[<xml/>]]>
                    </payload>
                </input-message>
                <assertions>
                    <assert-metadata-equals>
                        <metadata>
                            <key-value-pair>
                                <key>key1</key>
                                <value>bar2</value>
                            </key-value-pair>
                        </metadata>
                    </assert-metadata-equals>
                </assertions>
            </test-case>
        </test>
        <test>
            <unique-id>Test3</unique-id>
            <service-to-test>
                <source class="file-source">
                    <file>file:///./src/test/resources/xinclude.xml</file>
                </source>
                <preprocessors>
                    <preprocessor class="xinclude-preprocessor" />
                    <preprocessor class="variable-substitution-preprocessor">
                        <property-file>file:///./src/test/resources/test.properties</property-file>
                    </preprocessor>
                    <preprocessor class="xpath-preprocessor">
                        <xpath>//add-metadata-service[./unique-id = 'Add1']</xpath>
                    </preprocessor>
                </preprocessors>
            </service-to-test>
            <test-case>
                <unique-id>TestCase1</unique-id>
                <input-message class="inline-test-message">
                    <payload>
                        <![CDATA[<xml/>]]>
                    </payload>
                </input-message>
                <assertions>
                    <assert-metadata-equals>
                        <metadata>
                            <key-value-pair>
                                <key>key1</key>
                                <value>bar</value>
                            </key-value-pair>
                        </metadata>
                    </assert-metadata-equals>
                </assertions>
            </test-case>
        </test>
    </test-list>
</service-test>